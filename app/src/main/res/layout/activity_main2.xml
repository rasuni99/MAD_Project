<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buddhika.MainActivity2">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@android:color/holo_orange_light"
        app:itemIconTint="@color/cardview_light_background"
        app:itemTextColor="@color/common_google_signin_btn_text_dark_focused"
        app:menu="@menu/menu_naviagtion" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F7F9F9"
        android:weightSum="4">

        <TextView
            android:id="@+id/info"
            android:gravity="center|right"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#0000ff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:background="#9DFFD4"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="30dp"
            android:padding="5dp"
            android:layout_marginHorizontal="10dp"/>


        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:background="#9DFFD4"
            android:gravity="center|right"
            android:padding="5dp"
            android:textColor="#0000ff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:padding="10dp">

            <Button
                android:id="@+id/ac"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/bm_cal1"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHighlight="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:background="@drawable/custom_btn_cal"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/power"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="^"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHighlight="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:background="@drawable/custom_btn_cal"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="BACK"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHighlight="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:background="@drawable/custom_btn_cal"
                android:textSize="18sp" />

            <Button
                android:id="@+id/div"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="/"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHighlight="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:background="@drawable/custom_btn_cal"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:padding="10dp">

            <Button
                android:id="@+id/seven"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="7"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHighlight="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:background="@drawable/custom_btn_cal"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/eight"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="8"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHighlight="@color/design_default_color_primary_dark"
                android:background="@drawable/custom_btn_cal"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/nine"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="9"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHighlight="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:background="@drawable/custom_btn_cal"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/mul"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="X"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHighlight="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:background="@drawable/custom_btn_cal"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:padding="10dp">

            <Button
                android:id="@+id/four"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="4"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHighlight="@color/design_default_color_primary_dark"
                android:background="@drawable/custom_btn_cal"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/five"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="5"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHighlight="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:background="@drawable/custom_btn_cal"
                android:textSize="18sp" />

            <Button
                android:id="@+id/six"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="6"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHighlight="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:background="@drawable/custom_btn_cal"
                android:textSize="18sp" />

            <Button
                android:id="@+id/min"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="-"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHighlight="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:background="@drawable/custom_btn_cal"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:padding="10dp">

            <Button
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="1"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHighlight="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:background="@drawable/custom_btn_cal"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="2"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHighlight="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:background="@drawable/custom_btn_cal"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/custom_btn_cal"
                android:layout_weight="1"
                android:text="3"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHighlight="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/plus"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/custom_btn_cal"
                android:layout_weight="1"
                android:text="+"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHighlight="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:padding="10dp">

            <Button
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="0"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHighlight="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:background="@drawable/custom_btn_cal"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/point"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="."
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHighlight="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:background="@drawable/custom_btn_cal"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/ans"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/bm_cal3"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHighlight="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:background="@drawable/custom_btn_cal"
                android:textSize="18sp" />

            <Button
                android:id="@+id/equal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="="
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHighlight="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:background="@drawable/custom_btn_cal"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:textSize="18sp" />
        </LinearLayout>






    </LinearLayout>

</RelativeLayout>